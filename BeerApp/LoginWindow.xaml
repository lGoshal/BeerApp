<Window x:Class="BeerApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeerApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Username:" VerticalAlignment="Top" Margin="106,50,-56,0" />
        <TextBox x:Name="UsernameTextBox" Width="200" Height="25" VerticalAlignment="Top" Margin="106,66,94,0" />

        <TextBlock Text="Password:" VerticalAlignment="Top" Margin="106,100,-56,0" />
        <PasswordBox x:Name="PasswordBox" Width="200" Height="25" VerticalAlignment="Top" Margin="106,116,94,0" />

        <Button Content="Login" Width="100" Height="30" VerticalAlignment="Top" Margin="150,157,150,0" Click="LoginButton_Click"/>
        <Button Content="Register" Width="100" Height="30" VerticalAlignment="Top" Margin="150, 197, 150, 0" Click="RegisterButton_Click"/>

        <TextBlock x:Name="ErrorMessageTextBlock" Text="" Foreground="Red" VerticalAlignment="Top" Margin="31,244,19,0"/>
    </Grid>
</Window>
